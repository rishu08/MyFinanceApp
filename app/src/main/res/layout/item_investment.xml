<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="11"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="age"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/editTextAmountInvested"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Amount Invested"/>

    <EditText
        android:id="@+id/editTextReturnPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Return %"/>

    <EditText
        android:id="@+id/editTextInflationPercentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Inflation %"/>

    <TextView
        android:id="@+id/textViewAmountAfterReturns"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="Amount after return"/>

    <TextView
        android:id="@+id/textViewTotalCorpus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Total Corpus"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/textViewCurrentDayValueOfCorpus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="current day value of corpus"
        android:layout_weight="2"/>
</LinearLayout>
